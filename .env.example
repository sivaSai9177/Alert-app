# Database Configuration
DATABASE_URL=your_database_url_here
NEON_DATABASE_URL=your-neon-database-url

# Better Auth Core Configuration
BETTER_AUTH_SECRET=your-super-secret-key-change-in-production-minimum-32-characters
BETTER_AUTH_URL=http://localhost:8081
BETTER_AUTH_BASE_URL=http://localhost:8081/api/auth
COOKIE_DOMAIN=localhost

# Local Development Network
LOCAL_IP=192.168.1.104 # Your local network IP

# Social Authentication Providers

# Google OAuth (Primary)
# For development with Expo Go, use your web client ID
# For production, you'll need separate iOS and Android OAuth clients
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Apple Sign-In (iOS Healthcare Apps)
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret
APPLE_KEY_ID=your-apple-key-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_PRIVATE_KEY_PATH=path/to/apple/private/key.p8

# Microsoft Azure AD (Enterprise Healthcare)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=your-azure-tenant-id

# Expo Public Variables (accessible in the app)
EXPO_PUBLIC_API_URL=http://192.168.1.104:8081
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=your-google-web-client-id

# Email Service Configuration (for password reset)
EMAIL_PROVIDER=sendgrid  # or ses, nodemailer, etc.
EMAIL_FROM=noreply@yourhospital.com
SENDGRID_API_KEY=your-sendgrid-api-key

# SMS Configuration (for 2FA)
SMS_PROVIDER=twilio  # or aws-sns, etc.
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Redis Configuration (Production Session Storage)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Healthcare Security Configuration
SESSION_DURATION=28800  # 8 hours for healthcare compliance
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION=900  # 15 minutes
AUDIT_LOG_RETENTION_DAYS=2190  # 6 years for HIPAA compliance

# Hospital Organization Settings
HOSPITAL_NAME=General Hospital
HOSPITAL_ID=general-hospital-001
HOSPITAL_ADMIN_EMAIL=admin@generalhospital.com

# Feature Flags for Healthcare Compliance
ENABLE_TWO_FACTOR=true
ENABLE_SOCIAL_LOGIN=true
REQUIRE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_HISTORY=true  # Prevent password reuse
ENABLE_AUDIT_LOGGING=true

# Environment and Deployment
NODE_ENV=development
LOG_LEVEL=info  # debug, info, warn, error
DEBUG_MODE=true

# Production URLs (when deploying)
# PRODUCTION_URL=https://yourapp.com
# COOKIE_DOMAIN=.yourapp.com
# ADDITIONAL_TRUSTED_ORIGINS=https://admin.yourdomain.com,https://api.yourdomain.com

# Development Settings
ALLOW_HTTP_COOKIES=true  # Set to false in production